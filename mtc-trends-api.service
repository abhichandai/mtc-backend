[Unit]
Description=makethiscontent.com Trends API
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/clawd/mtc-backend
Environment="PATH=/root/clawd/mtc-env/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/root/clawd/mtc-env/bin/python3 /root/clawd/mtc-backend/api.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
